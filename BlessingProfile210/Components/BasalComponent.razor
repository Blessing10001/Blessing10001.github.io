<h3>BasalComponent</h3>

<div class="mb-3">
    <label class="form-label"> weight</label>
    <NumberInput TValue="int" @bind-Value="@m" Placeholder="Enter Mass(kg)" />

    <label class="form-label">How old </label>
    <NumberInput TValue="int" @bind-Value="@a" Placeholder="Enter Age(years)" />

    <label class="form-label">Amount of Height</label>
    <NumberInput TValue="int" @bind-Value="@h" Placeholder="Enter Height(cm)" />

    <label class="form-label">Amount of calories</label>
    <NumberInput TValue="int" @bind-Value="@c" Placeholder="Enter Calories(kcal)" />

    <Switch @bind-Value="male" Label="" />
    <div class=" mt-3"> Are Male = <b>@male</b></div>

    <Button @onclick="() => BMRate(m,h)">Calculate</Button>
</div>
<div class="mb-3">Entered Amount: @BMRate(m,h) K/d</div>
@code {
    bool male;
    private int m;
    private int h;
    private int a;
    private int c;
    private int s;

    private decimal ma = 10.0m; private decimal ha = 6.25m; private decimal aa = 5.0m;
    private decimal BMRate(int cm, int kg)
    {
        if (male == true) s = 5;
        if (male == false) s = -161;
        decimal Bmr = 0;
        Bmr = (((ha * h / 1) + (ma * m / 1) - (aa * h / 1) + s) * (c/1000));
        return Bmr;
    }

}
